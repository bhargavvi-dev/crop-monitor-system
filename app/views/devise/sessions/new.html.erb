<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
    <legend>
      <%= t('login.login_to_your_account') %>
    </legend>
    <div class="form-group">
      <label class="col-lg-2 control-label"></label>
      <div class="col-lg-10">
        <% if alert.present? %>
          <div class="alert alert-dismissible alert-danger">
            <button class="close" data-dismiss="alert" type="button"></button>
            <a class="alert-link" href="#">
              <%= alert %>
            </a>
          </div>
        <% end %>
      </div>
    </div>
    <div class="<%= (resource.errors["email"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputEmail">Email</label>
      <div class="col-lg-8">
        <%= f.email_field :email, autofocus: true, placeholder: 'email', :class => "form-control" %>
        <% if resource.errors["email"].any? %>
          <div class="errorMsg">
            <%= resource.errors["email"][0]         %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="<%= (resource.errors["password"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputPassword">Password</label>
      <div class="col-lg-8">
        <%= f.password_field :password, placeholder: 'password', :class => "form-control" %>
        <% if resource.errors["password"].any? %>
          <div class="errorMsg">
            <%= resource.errors["password"][0] %>
          </div>
        <% end %>
      </div>
    </div>
  </fieldset>
  <div class="form-group">
    <label class="col-lg-2 control-label"></label>
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Log in", :class => "btn btn-success", :name => "login" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
       
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-info" %>
        <%= link_to "Sign up", new_registration_path(resource_name), :class => "btn btn-info",'data-no-turbolink' => true %>
      </div>
    </div>
  </div>
<% end %>