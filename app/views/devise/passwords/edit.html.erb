<%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:class => "form-horizontal", :method => "put"}) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <fieldset>
    <legend>
      <%= t('recovery.recover_password') %>
    </legend>
    <div class="form-group">
      <label class="col-lg-2 control-label"></label>
      <div class="col-lg-8">
        <% if alert.present? %>
          <div class="alert alert-dismissible alert-danger">
            <button class="close" data-dismiss="alert" type="button"></button>
            <a class="alert-link" href="#">
              <%= alert %>
            </a>
          </div>
        <% end %>
      </div>
    </div>
    <div class="<%= (resource.errors["password"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputPassword">
        <%= t('change_password.new_password') %>
      </label>
      <div class="col-lg-8">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: 'New Password', :class => "form-control" %>
        <% if resource.errors["password"].any? %>
          <div class="errorMsg">
            <%= resource.errors["password"].first %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="<%= (resource.errors["password_confirmation"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputPassword">
        <%= t('change_password.confirm_password') %>
      </label>
      <div class="col-lg-8">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', :class => "form-control" %>
        <% if resource.errors["password_confirmation"].any? %>
          <div class="errorMsg">
            <%= resource.errors["password_confirmation"][0]         %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
        <%= f.submit 'Change my password', :class => "btn btn-success", :name => "login" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
      <%= link_to 'Log In', new_farmer_session_path , :class => "btn btn-info"%>
      <%= link_to 'Sign Up', new_farmer_registration_path , :class => "btn btn-info", 'data-no-turbolink' => true %>
      </div>
    </div>
  </fieldset>
<% end %>