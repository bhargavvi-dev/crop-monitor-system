<%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:class => "form-horizontal", :method => "post"}) do |f| %>
  <fieldset>
    <legend>
      <%= t('recovery.recover_password') %>
    </legend>
    <div class="form-group">
      <label class="col-lg-2 control-label"></label>
      <div class="col-lg-8">
        <% if alert.present? %>
          <div class="alert alert-dismissible alert-danger">
            <button class="close" data-dismiss="alert" type="button"></button>
            <a class="alert-link" href="#">
              <%= alert %>
            </a>
          </div>
        <% end %>
      </div>
    </div>
    <div class="<%= (resource.errors["email"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputEmail">Email</label>
      <div class="col-lg-8">
        <%= f.email_field :email, autofocus: true, placeholder: 'email', :class => "form-control" %>
        <% if resource.errors["email"].any? %>
          <div class="errorMsg">
            <%= resource.errors["email"][0]         %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
        <%= f.submit 'Recover', :class => "btn btn-success", :name => "login" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
      <%= link_to 'Log In', new_farmer_session_path , :class => "btn btn-info"%>
      <%= link_to 'Sign Up', new_farmer_registration_path , :class => "btn btn-info", 'data-no-turbolink' => true %>
      </div>
    </div>
  </fieldset>
<% end %>