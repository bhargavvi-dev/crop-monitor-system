<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend>
      <%= t('edit.edit Farmer') %>
    </legend>
    <div class="form-group">
      <label class="col-lg-2 control-label"></label>
      <div class="col-lg-10">
        <% if alert.present? %>
          <div class="alert alert-dismissible alert-danger">
            <button class="close" data-dismiss="alert" type="button"></button>
            <a class="alert-link" href="#">
              <%= alert %>
            </a>
          </div>
        <% end %>
      </div>
    </div>
     <div class="<%= (resource.errors["name"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputName">Name</label>
      <div class="col-lg-10">
        <%= f.text_field :name, autofocus: true, placeholder: 'Name', :class => "form-control" %>
        <% if resource.errors["name"].any? %>
          <div class="errorMsg">
            <%= resource.errors["name"][0] %>
          </div>
        <% end %>
      </div>
    </div>

    
    <div class="<%= (resource.errors["address"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputAddress">Address</label>
      <div class="col-lg-10">
        <%= f.text_field :address, autofocus: true, placeholder: 'Address', :class => "form-control" %>
        <% if resource.errors["address"].any? %>
          <div class="errorMsg">
            <%= resource.errors["address"][0] %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="<%= (resource.errors["phone"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputPhone">Phone</label>
      <div class="col-lg-10">
        <%= f.text_field :phone, autofocus: true, placeholder: 'Phone', :class => "form-control" %>
        <% if resource.errors["phone"].any? %>
          <div class="errorMsg">
            <%= resource.errors["phone"][0] %>
          </div>
        <% end %>
      </div>
    </div>


    <div class="<%= (resource.errors["email"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputEmail">Email</label>
      <div class="col-lg-10">
        <%= f.email_field :email, autofocus: true, placeholder: 'signup email', :class => "form-control" %>
        <% if resource.errors["email"].any? %>
          <div class="errorMsg">
            <%= resource.errors["email"][0] %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="<%= (resource.errors["password"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputPassword">Password</label>
      <div class="col-lg-10">
        <%= f.password_field :password, autofocus: true, placeholder: 'leave blank if you dont want to change it', :class => "form-control" %>
        <% if resource.errors["password"].any? %>
          <div class="errorMsg">
            <%= resource.errors["password"][0] %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="<%= (resource.errors["password_confirmation"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputPassword">Confirm Password</label>
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'confirm password', :class => "form-control" %>
        <% if resource.errors["password_confirmation"].any? %>
          <div class="errorMsg">
            <%= resource.errors["password_confirmation"][0]      %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="<%= (resource.errors["current_password"].any? ? "has-error" : '') %> form-group">
      <label class="col-lg-2 control-label" for="inputPassword">Current Password</label>
      <div class="col-lg-10">
        <%= f.password_field :current_password, autocomplete: "off", placeholder: 'we need your current password to confirm your changes', :class => "form-control" %>
        <% if resource.errors["current_password"].any? %>
          <div class="errorMsg">
            <%= resource.errors["current_password"][0]      %>
          </div>
        <% end %>
      </div>
    </div>

     <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Update",:class => "btn btn-success",:name => "update" %>
      </div>
    </div>
  </fieldset>
<% end %> 
    <div>
      <%= button_to "Cancel my account", registration_path(resource_name),class: 'btn btn-danger', data: { confirm: "Are you sure?" }, method: :delete %>  
    </div>
<%= link_to "Back", :back %>
