<body>
<div class="navigation">
   <div class="container">
     <div class="fixed-header">
       <div class="top-menu">
        <div class="top-head">
        <%= link_to 'Crop-Monitoring-System', root_path  %>
      </div>
        <ul class="nav navbar-nav">
        <% if farmer_signed_in? %>
        <li><%= link_to "Crops", crops_path %></li>
        <li><%= link_to "Farms", farms_path %></li>
        <li><%= link_to "Sensors", sensors_path %></li>
        <li><%= link_to "FarmCrop", farmcrops_path %></li>
        <li><%= link_to "FarmSensor", farmsensors_path %></li>
        <li><%= link_to "Temperatures", temperatures_path %></li> 
      </ul>
      <% end %>    
       </div>

       <div class="right-msg">
         <% if farmer_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_farmer.name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Profile', edit_farmer_registration_path %></li>
              <li><%= link_to 'Log out', destroy_farmer_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
        <div class = "top-menu">
         <ul>
           <li><%= link_to 'Log In', new_farmer_session_path %></li>
           <li><%= link_to 'Sign Up', new_farmer_registration_path %></li>
           <li><%= link_to 'Admin Log In', new_admin_user_session_path %></li>   
          <% end %>
      </ul>
    </div>
       </div>
       <div class="clearfix"></div>
     </div>
     </div>
   </div>
